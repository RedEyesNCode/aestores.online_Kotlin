<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/grey"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/green"
        android:layout_height="@dimen/_70sdp">

        <ImageView
            android:layout_width="@dimen/_25sdp"
            android:src="@drawable/ic_close"
            android:id="@+id/ivClose"
            android:padding="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_28sdp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_height="@dimen/_25sdp"
            app:tint="@color/white" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/_28sdp"
            android:id="@+id/accountLayout"
            android:layout_marginEnd="@dimen/_12sdp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="@dimen/_18sdp"
                android:src="@drawable/ic_account"
                android:layout_height="@dimen/_18sdp"/>
            <TextView
                android:layout_width="wrap_content"
                android:text="@string/hi"
                android:textColor="@color/white"
                android:id="@+id/tvName"
                android:layout_marginStart="@dimen/_8sdp"

                android:fontFamily="@font/mulish_bold"
                android:textSize="@dimen/_15sdp"
                android:layout_height="wrap_content"/>


        </LinearLayout>



    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/_12sdp"

        android:layout_height="wrap_content">

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            tools:listitem="@layout/category_item"
            tools:itemCount="4"
            android:id="@+id/recvNavDrawer"
            android:layout_height="wrap_content">




        </androidx.recyclerview.widget.RecyclerView>


        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:id="@+id/myAccountLayout"
            android:layout_height="@dimen/_45sdp">
            <TextView
                android:layout_width="wrap_content"
                android:text="@string/my_account"
                android:layout_alignParentStart="true"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginStart="@dimen/_8sdp"
                android:fontFamily="@font/mulish_bold"
                android:textSize="@dimen/_15sdp"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_width="@dimen/_25sdp"
                android:src="@drawable/ic_dropdown"
                android:padding="@dimen/_2sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:id="@+id/ivDownAccount"
                android:layout_alignParentTop="true"
                android:layout_marginTop="@dimen/_8sdp"

                android:layout_alignParentEnd="true"
                android:layout_height="@dimen/_25sdp"/>

            <ImageView
                android:layout_width="@dimen/_25sdp"
                android:src="@drawable/ic_dropdown"
                android:padding="@dimen/_2sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:id="@+id/ivUpAccount"
                android:visibility="gone"
                android:rotation="180"
                android:layout_alignParentTop="true"
                android:layout_marginTop="@dimen/_8sdp"

                android:layout_alignParentEnd="true"
                android:layout_height="@dimen/_25sdp"/>





        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:visibility="gone"
            android:id="@+id/dropDownMyAccount"
            android:layout_marginHorizontal="@dimen/_12sdp"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginBottom="@dimen/_16sdp"
                android:id="@+id/infoSettingsLayout"
                android:layout_marginHorizontal="@dimen/_12sdp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:fontFamily="@font/mulish_bold"
                    android:lineSpacingExtra="@dimen/_5sdp"
                    android:text="@string/my_info_u0026_settings"
                    android:textColor="@color/black"

                    android:textSize="@dimen/_12sdp" />



            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginBottom="@dimen/_16sdp"
                android:id="@+id/myPurchaseLayout"
                android:layout_marginHorizontal="@dimen/_12sdp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:fontFamily="@font/mulish_bold"
                    android:lineSpacingExtra="@dimen/_5sdp"
                    android:text="@string/my_purchase"
                    android:textColor="@color/black"

                    android:textSize="@dimen/_12sdp" />



            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginBottom="@dimen/_16sdp"
                android:id="@+id/myBalanceLayout"
                android:layout_marginHorizontal="@dimen/_12sdp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:fontFamily="@font/mulish_bold"
                    android:lineSpacingExtra="@dimen/_5sdp"
                    android:text="@string/my_balance"
                    android:textColor="@color/black"

                    android:textSize="@dimen/_12sdp" />



            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginBottom="@dimen/_16sdp"
                android:id="@+id/myTeamLayout"
                android:layout_marginHorizontal="@dimen/_12sdp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="@dimen/_15sdp"
                    android:src="@drawable/ic_dropdown"
                    android:padding="@dimen/_2sdp"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:layout_alignParentTop="true"
                    android:id="@+id/ivDownTeam"
                    android:layout_alignParentEnd="true"
                    android:layout_height="@dimen/_15sdp"/>
                <ImageView
                    android:layout_width="@dimen/_15sdp"
                    android:src="@drawable/ic_dropdown"
                    android:padding="@dimen/_2sdp"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:id="@+id/ivUpTeam"
                    android:visibility="gone"
                    android:rotation="180"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_height="@dimen/_15sdp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:fontFamily="@font/mulish_bold"
                    android:lineSpacingExtra="@dimen/_5sdp"
                    android:text="@string/my_team"
                    android:id="@+id/tvMyTeam"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:layout_below="@id/tvMyTeam"
                    android:id="@+id/TeamLinearLayout"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:layout_marginBottom="@dimen/_16sdp"
                        android:id="@+id/myrefferals"
                        android:layout_marginHorizontal="@dimen/_12sdp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/MyRefferals"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_marginStart="@dimen/_12sdp"
                            android:fontFamily="@font/mulish_bold"
                            android:lineSpacingExtra="@dimen/_5sdp"
                            android:text="@string/my_refferals"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12sdp" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_marginBottom="@dimen/_16sdp"
                        android:id="@+id/teamRefferals"
                        android:layout_marginHorizontal="@dimen/_12sdp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvTeamRefferals"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_marginStart="@dimen/_12sdp"
                            android:fontFamily="@font/mulish_bold"
                            android:lineSpacingExtra="@dimen/_5sdp"
                            android:text="Team Refferals"
                            android:textColor="@color/black"

                            android:textSize="@dimen/_12sdp" />



                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_marginBottom="@dimen/_16sdp"
                        android:id="@+id/tvDirectEarn"
                        android:layout_marginHorizontal="@dimen/_12sdp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvDirectEarning"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_marginStart="@dimen/_12sdp"
                            android:fontFamily="@font/mulish_bold"
                            android:lineSpacingExtra="@dimen/_5sdp"
                            android:text="@string/direct_earnings"
                            android:textColor="@color/black"

                            android:textSize="@dimen/_12sdp" />



                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_marginBottom="@dimen/_16sdp"
                        android:id="@+id/tvTeamEarn"
                        android:layout_marginHorizontal="@dimen/_12sdp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvTeamEarning"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_marginStart="@dimen/_12sdp"
                            android:fontFamily="@font/mulish_bold"
                            android:lineSpacingExtra="@dimen/_5sdp"
                            android:text="Team Earning"
                            android:textColor="@color/black"

                            android:textSize="@dimen/_12sdp" />



                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_marginBottom="@dimen/_16sdp"
                        android:id="@+id/myOffers"
                        android:layout_marginHorizontal="@dimen/_12sdp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvMyOffers"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_marginStart="@dimen/_12sdp"
                            android:fontFamily="@font/mulish_bold"
                            android:lineSpacingExtra="@dimen/_5sdp"
                            android:text="@string/my_offers"
                            android:textColor="@color/black"

                            android:textSize="@dimen/_12sdp" />



                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_marginBottom="@dimen/_16sdp"
                        android:id="@+id/unfinishedKyc"
                        android:layout_marginHorizontal="@dimen/_12sdp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvUnfinishedKYC"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_marginStart="@dimen/_12sdp"
                            android:fontFamily="@font/mulish_bold"
                            android:lineSpacingExtra="@dimen/_5sdp"
                            android:text="Unfinished KYC"
                            android:textColor="@color/black"

                            android:textSize="@dimen/_12sdp" />



                    </RelativeLayout>




                </LinearLayout>



            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginBottom="@dimen/_16sdp"
                android:id="@+id/earningLayout"
                android:layout_marginHorizontal="@dimen/_12sdp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:fontFamily="@font/mulish_bold"
                    android:lineSpacingExtra="@dimen/_5sdp"
                    android:text="@string/earning_report"
                    android:textColor="@color/black"

                    android:textSize="@dimen/_12sdp" />



            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginBottom="@dimen/_16sdp"
                android:id="@+id/wishlistLayout"
                android:layout_marginHorizontal="@dimen/_12sdp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:fontFamily="@font/mulish_bold"
                    android:lineSpacingExtra="@dimen/_5sdp"
                    android:text="@string/my_wishlist"
                    android:textColor="@color/black"

                    android:textSize="@dimen/_12sdp" />



            </RelativeLayout>



        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:background="@color/grey"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_height="@dimen/_2sdp"/>
        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:id="@+id/helpInfoLayout"
            android:layout_height="@dimen/_45sdp">
            <TextView
                android:layout_width="wrap_content"
                android:text="@string/help_u0026_info"
                android:layout_alignParentStart="true"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginStart="@dimen/_8sdp"
                android:id="@+id/tvHelpAndInfo"
                android:fontFamily="@font/mulish_bold"
                android:textSize="@dimen/_15sdp"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_width="@dimen/_25sdp"
                android:src="@drawable/ic_dropdown"
                android:padding="@dimen/_2sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:id="@+id/ivDown"
                android:layout_alignParentTop="true"
                android:layout_marginTop="@dimen/_8sdp"

                android:layout_alignParentEnd="true"
                android:layout_height="@dimen/_25sdp"/>

            <ImageView
                android:layout_width="@dimen/_25sdp"
                android:src="@drawable/ic_dropdown"
                android:padding="@dimen/_2sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:id="@+id/ivUp"
                android:visibility="gone"
                android:rotation="180"
                android:layout_alignParentTop="true"
                android:layout_marginTop="@dimen/_8sdp"

                android:layout_alignParentEnd="true"
                android:layout_height="@dimen/_25sdp"/>





        </RelativeLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:visibility="gone"
            android:id="@+id/dropDownHelpInfo"
            android:layout_marginHorizontal="@dimen/_12sdp"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginBottom="@dimen/_16sdp"
                android:id="@+id/termsLayout"
                android:layout_marginHorizontal="@dimen/_12sdp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvTerms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:fontFamily="@font/mulish_bold"
                    android:lineSpacingExtra="@dimen/_5sdp"
                    android:text="@string/terms_u0026_conditions"
                    android:textColor="@color/black"

                    android:textSize="@dimen/_12sdp" />



            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginBottom="@dimen/_16sdp"
                android:id="@+id/policyLayout"
                android:layout_marginHorizontal="@dimen/_12sdp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvPrivacyPolicy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:fontFamily="@font/mulish_bold"
                    android:lineSpacingExtra="@dimen/_5sdp"
                    android:text="@string/privacy_policy"
                    android:textColor="@color/black"

                    android:textSize="@dimen/_12sdp" />



            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginBottom="@dimen/_16sdp"
                android:id="@+id/shippingLayout"
                android:layout_marginHorizontal="@dimen/_12sdp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvShippingPolicy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:fontFamily="@font/mulish_bold"
                    android:lineSpacingExtra="@dimen/_5sdp"
                    android:text="Shipping Policy"
                    android:textColor="@color/black"

                    android:textSize="@dimen/_12sdp" />



            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginBottom="@dimen/_16sdp"
                android:id="@+id/exchangeLayout"
                android:layout_marginHorizontal="@dimen/_12sdp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvExchangePolicy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:fontFamily="@font/mulish_bold"
                    android:lineSpacingExtra="@dimen/_5sdp"
                    android:text="Exchange Policy"
                    android:textColor="@color/black"

                    android:textSize="@dimen/_12sdp" />



            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginBottom="@dimen/_16sdp"
                android:id="@+id/aboutUsLayout"
                android:layout_marginHorizontal="@dimen/_12sdp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvAboutUs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:fontFamily="@font/mulish_bold"
                    android:lineSpacingExtra="@dimen/_5sdp"
                    android:text="About Us"
                    android:textColor="@color/black"

                    android:textSize="@dimen/_12sdp" />



            </RelativeLayout>




        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:background="@color/grey"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_height="@dimen/_2sdp"/>




    </LinearLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:text="Logout"
        android:id="@+id/btnLogout"
        android:textColor="@color/white"
        android:background="@drawable/background_green_filled"
        android:layout_height="wrap_content"/>






</LinearLayout>