<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".ui.activity.BalanceActivity">
    <include
        android:layout_width="match_parent"
        android:id="@+id/commonTitleBar"
        android:layout_height="wrap_content"
        layout="@layout/common_title_bar"/>
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        app:cardCornerRadius="@dimen/_6sdp"
        app:cardElevation="@dimen/_8sdp"
        app:cardUseCompatPadding="true"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_margin="@dimen/_12sdp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="@dimen/_45sdp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_wallet"
                android:layout_alignParentStart="true"
                android:id="@+id/ivWallet"
                android:layout_height="@dimen/_45sdp"
                app:tint="@color/green" />
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/ivWallet"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textSize="@dimen/_16sdp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/mulish_medium"
                    android:text="Reward Coins" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textSize="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/mulish_bold"
                    android:text="0" />





            </LinearLayout>







        </RelativeLayout>



    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        app:cardCornerRadius="@dimen/_6sdp"
        app:cardElevation="@dimen/_8sdp"
        app:cardUseCompatPadding="true"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_margin="@dimen/_12sdp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="@dimen/_45sdp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_wallet"
                android:layout_alignParentStart="true"
                android:id="@+id/ivCask"
                android:layout_height="@dimen/_45sdp"
                app:tint="@color/green" />
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:id="@+id/layoutCash"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/ivCask"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textSize="@dimen/_16sdp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/mulish_medium"
                    android:text="Cash Wallet" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textSize="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/mulish_bold"
                    android:text="Rs 0." />







            </LinearLayout>






        </RelativeLayout>



    </com.google.android.material.card.MaterialCardView>
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:id="@+id/btnAddCash"
        android:text="@string/add_cash"
        android:layout_marginHorizontal="@dimen/_8sdp"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:background="@drawable/background_green_filled"
        android:layout_height="wrap_content"/>



</LinearLayout>