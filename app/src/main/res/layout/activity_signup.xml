<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="viewmodel"
            type="com.ushatech.aestoreskotlin.presentation.SignupViewModel" />
    </data>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.activity.SignupActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_12sdp"

            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginHorizontal="@dimen/_12sdp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/mulish_bold"
                android:gravity="center"
                android:text="Register"
                android:textAllCaps="true"
                android:textColor="@color/green"
                android:textSize="@dimen/_19sdp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:background="@color/green" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_9sdp"
                android:fontFamily="@font/mulish_regular"
                android:gravity="start"
                android:text="Register for New account."

                android:textColor="@color/black"
                android:textSize="@dimen/_14sdp" />

            <EditText
                android:id="@+id/edtName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="@dimen/_12sdp"
                android:paddingHorizontal="@dimen/_4sdp"
                android:background="@drawable/background_grey_box"
                android:layout_marginTop="@dimen/_30sdp"
                android:hint="Full Name"
                android:inputType="text" />

            <EditText
                android:id="@+id/edtMobileNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_30sdp"
                android:hint="@string/mobile_number"
                android:paddingVertical="@dimen/_12sdp"
                android:paddingHorizontal="@dimen/_4sdp"
                android:background="@drawable/background_grey_box"
                android:inputType="number"
                android:maxLength="10" />
            <EditText
                android:id="@+id/edtEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_30sdp"
                android:hint="Enter email address"
                android:paddingVertical="@dimen/_12sdp"
                android:paddingHorizontal="@dimen/_4sdp"
                android:background="@drawable/background_grey_box"
                android:inputType="number"
                android:maxLength="10" />
            <EditText
                android:id="@+id/edtReferalCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_30sdp"
                android:hint="Enter referal code. (Optional)"
                android:paddingVertical="@dimen/_12sdp"
                android:paddingHorizontal="@dimen/_4sdp"
                android:background="@drawable/background_grey_box"
                android:inputType="number"
                android:maxLength="10" />

            <CheckBox
                android:layout_width="wrap_content"
                android:id="@+id/checkBoxOnline"
                android:buttonTint="@color/green"
                android:layout_marginTop="@dimen/_8sdp"
                android:text="@string/agree_to_terms_u0026_conditons"
                android:fontFamily="@font/mulish_bold"
                android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnSignup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_18sdp"
                android:layout_marginBottom="@dimen/_12sdp"
                android:background="@drawable/background_green_filled"
                android:text="@string/signup"
                android:textAllCaps="true"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_9sdp"
                android:fontFamily="@font/mulish_regular"
                android:gravity="center"
                android:text="OR"
                android:visibility="gone"
                android:textColor="@color/black"
                android:textSize="@dimen/_14sdp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_18sdp"
                android:layout_marginBottom="@dimen/_12sdp"
                android:visibility="gone"
                android:background="@drawable/background_green_solid"
                android:text="@string/login"
                android:textAllCaps="true"
                android:textColor="@color/black" />
        </LinearLayout>


    </ScrollView>







</RelativeLayout>
</layout>